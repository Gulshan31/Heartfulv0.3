<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:clickable="true"
    android:padding="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_marginBottom="12dp"
    android:elevation="4dp">
        <TextView
            android:id="@+id/date_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:paddingTop="4dp"
            android:paddingLeft="4dp"
            android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:minHeight="144dp"
        android:padding="4dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/news_images"
            android:layout_width="96dp"
            android:layout_gravity="center_vertical"
            android:layout_height="96dp"
            android:transitionName="@string/fragmenttwo_image_trans"
            android:src="@drawable/heart"/>

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"

            >

            <TextView
                android:id="@+id/news_title"
                android:layout_marginTop="24dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:layout_weight="1"
                android:textSize="16sp"
                android:maxLines="3"
                android:textStyle="bold"
                tools:text="News Titlewill be here" />

            <TextView
                android:id="@+id/news_description"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="4"
                android:ellipsize="end"
                android:textSize="12sp"
                tools:text="Any types of news description will be given here I mmean detail of the news will be here" />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>