<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:clickable="true"
    android:orientation="vertical"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:background="#fff"
    android:focusable="true">

<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:minHeight="124dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/news_images"
            android:layout_width="96dp"
            android:layout_gravity="center_vertical"
            android:layout_height="96dp"
            android:layout_marginTop="8dp"
            android:transitionName="@string/fragmenttwo_image_trans"
            android:src="@drawable/placeholder"/>

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:paddingStart="12dp">

            <TextView
                android:id="@+id/news_title"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="96dp"

                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="News Title will be here test test test test test test teest Lorem Ipsum dolor sit am SDS SDSD SDD Der Lorem ipsum dolor sit amer Lorem Ipsum Dolor sit amer Lorem ipsum dolor sir amersdjfnfnsjf" />

        </LinearLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:layout_marginLeft="16dp"
        android:paddingTop="4dp"
        android:layout_marginStart="16dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="12dp"
        android:background="#d3d3d3"/>
</LinearLayout>