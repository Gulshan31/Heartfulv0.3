<LinearLayout xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    xmlns:android="http://schemas.android.com/apk/res/android" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="130dp"
        android:background="@drawable/rounded_corners"
        android:padding="8dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/org_logo"
            android:layout_width="100dp"
            android:layout_gravity="center_vertical"
            android:layout_height="100dp"
            android:src="@drawable/heart"/>

        <LinearLayout
            android:id="@+id/text_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="12dp">

            <TextView
                android:id="@+id/org_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:ellipsize="end"
                android:layout_weight="1"

                android:textSize="20sp"
                android:maxLines="2"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                tools:text="ABC12311111aaaaaaaaaa" />

            <TextView
                android:id="@+id/org_about"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="top"
                android:maxLines="3"
                android:ellipsize="end"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                tools:text="show love and rect to yaour dear love and respect with all of you love and respect" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:background="@drawable/category_rounded_corners">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/category"
            android:padding="8dp"
            android:textColor="#fff"
            android:text="Woman Empowerment"/>
    </LinearLayout>
</LinearLayout>